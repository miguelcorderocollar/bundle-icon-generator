# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.zip binary
*.gz binary
*.7z binary
*.tar binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Lock files (these should use LF)
package-lock.json text eol=lf
bun.lockb binary
yarn.lock text eol=lf
pnpm-lock.yaml text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf
.gitconfig text eol=lf

# Config files
.editorconfig text eol=lf
.prettierrc text eol=lf
.prettierignore text eol=lf
.eslintrc* text eol=lf
tsconfig*.json text eol=lf
next.config.* text eol=lf
vitest.config.* text eol=lf
playwright.config.* text eol=lf
postcss.config.* text eol=lf
vercel.json text eol=lf

# Documentation
*.md text eol=lf
LICENSE text eol=lf
